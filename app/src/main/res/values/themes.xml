<resources>
    <!--
        More information on MaterialComponents attributes can be found here:
        https://material.io/develop/android/docs/getting-started
    -->
    <style name="Theme.ComposePlayground" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background color. -->
        <item name="android:background">@color/white</item>
        <item name="colorOnBackground">@color/black</item>

        <!-- Surface color. -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>

        <!-- Error color. -->
        <item name="colorError">@color/red_500</item>
        <item name="colorOnError">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Shapes. -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Sample.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Sample.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Sample.LargeComponent</item>

        <!-- Types. -->
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Sample.Subtitle1</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Sample.Caption</item>
    </style>
</resources>